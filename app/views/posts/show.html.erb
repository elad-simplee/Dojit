<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
      <%= @post.comments.count %> Comments
    </small>
    <p><%= markdown @post.body %></p>
    <%= image_tag(@post.image.url) if @post.image? %>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
    <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>


<h3>Comments:</h3>
<% @comments.each do |comment| %>
<div class="col-md-7">
  <h6>
    <%= markdown comment.body%> 
  </h6>
  <small>
    <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
    submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %> <br/>
  </small>
</div>
<% end %>
<%= will_paginate @comments %>

<h3>Write new comment:</h3>
<div class="row">
  <div class="col-md-8">
  <%= render partial: 'comments/form', locals: {topic: @topic, post: @post, comment: @post.comments.new} %>
  </div>
</div>

</div>